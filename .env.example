cc# Server Configuration
PORT=8080
LOG_LEVEL="INFO"

# Target LLM provider: "openai" or "gemini" (or other LiteLLM supported models)
TARGET_LLM_PROVIDER="openai"

# API Keys for the target LLM provider.
# Ensure the correct key is set for the chosen TARGET_LLM_PROVIDER.
# These will be passed by the application to LiteLLM if configured in src/core/config.py
OPENAI_API_KEY="sk-your-openai-api-key"
GEMINI_API_KEY="your-google-gemini-api-key"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key" # Needed if TARGET_LLM_PROVIDER allows 'anthropic'

# Example for other keys (if LiteLLM is configured to pick them from its own env):
# AZURE_API_KEY="your-azure-key-for-litellm-if-not-passed-by-app"